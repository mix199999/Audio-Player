<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
           x:Class="GNOM.EqPopup"
           CanBeDismissedByTappingOutsideOfPopup="True"
          Color="Transparent"
           >
    <Frame
        Margin="0"
        CornerRadius="15"        
        Padding="0"
        >
        
         <Grid  Background="{Binding PrimaryColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Margin="0"  Padding="0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="Equalizer" FontSize="Large" HorizontalOptions="Center" />
        <Grid Grid.Row="1" x:Name="SliderGrid"  >
            <Grid.ColumnDefinitions>
                <!-- Add or remove ColumnDefinition elements to adjust the number of sliders -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

        
            <!-- Sliders -->
            <Slider Grid.Column="1" x:Name="Slider1" Minimum="-12" Maximum="12" Value="0" Rotation="270" VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}" />
            <Slider Grid.Column="2" x:Name="Slider2" Minimum="-12" Maximum="12" Value="0" Rotation="270"  VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}" />
            <Slider Grid.Column="3" x:Name="Slider3" Minimum="-12" Maximum="12" Value="0" Rotation="270"  VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}" />
            <Slider Grid.Column="4" x:Name="Slider4" Minimum="-12" Maximum="12" Value="0" Rotation="270" VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}" />
            <Slider Grid.Column="5" x:Name="Slider5" Minimum="-12" Maximum="12" Value="0" Rotation="270"  VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}" />
            <Slider Grid.Column="6" x:Name="Slider6" Minimum="-12" Maximum="12" Value="0" Rotation="270"  VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}" />
            <Slider Grid.Column="7" x:Name="Slider7" Minimum="-12" Maximum="12" Value="0" Rotation="270"  VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}" />
            <Slider Grid.Column="8" x:Name="Slider8" Minimum="-12" Maximum="12" Value="0" Rotation="270" VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}"/>
            <Slider Grid.Column="9" x:Name="Slider9" Minimum="-12" Maximum="12" Value="0" Rotation="270"  VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}"/>
            <Slider Grid.Column="10" x:Name="Slider10" Minimum="-12" Maximum="12" Value="0" Rotation="270"  VerticalOptions="CenterAndExpand" MinimumTrackColor="{Binding SecondaryColor}"/>

            <!-- Frequency labels -->
            <Label Grid.Column="1" Text="32 Hz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="2" Text="64 Hz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="3" Text="125 Hz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="4" Text="250 Hz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="5" Text="500 Hz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="6" Text="1 kHz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="7" Text="2 kHz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="8" Text="4 kHz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="9" Text="8 kHz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="10" Text="16 kHz" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
            
            <!-- Values Labels-->
            <Label Grid.Column="0" Text="+12 dB" HorizontalOptions="Center" VerticalOptions="Start" TextColor="{Binding SecondaryColor}" />
            <Label Grid.Column="0" Text="0 dB" HorizontalOptions="Center" VerticalOptions="Center" TextColor="{Binding SecondaryColor}"/>
            <Label Grid.Column="0" Text="-12 dB" HorizontalOptions="Center" VerticalOptions="End" TextColor="{Binding SecondaryColor}"/>
        </Grid>
            <Button x:Name="SaveEqualizerButton" Grid.Row="2" Text="Save Equalizer Settings" Clicked="SaveEqualizerButton_Clicked" VerticalOptions="End" HorizontalOptions="Center" />
    </Grid>
    </Frame>
   
</mct:Popup>